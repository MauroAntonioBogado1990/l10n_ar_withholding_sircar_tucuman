<?xml version='1.0' encoding='UTF-8'?>
<odoo>
   <data>

    <record id="view_account_export_agip_form" model="ir.ui.view">
         <field name="name">account.export.agip.form</field>
         <field name="model">account.export.agip</field>
         <field name="arch" type="xml">
            <form>
		<header>
			<button name="compute_agip_data" string="Generar AGIP" type="object" />
		</header>
		<sheet>
			<group>
				<field name="name" />
				<field name="date_from" />
				<field name="date_to" />
				<field name="tax_withholding" />
			</group>
         <notebook>
            <page name="name" string="TXT AGIP">
			      <group string="Archivo y datos">
                  <field name="export_agip_filename_per" invisible="1"/>
                  <field name="export_agip_file_nc" widget="binary" filename="export_agip_filename_per"/>
                  <field name="export_agip_data_nc" readonly="1"/>
                  <field name="export_agip_filename" invisible="1"/>
                  <field name="export_agip_file" widget="binary" filename="export_agip_filename"/>
                  <field name="export_agip_data" readonly="1"/>
			      </group>
            </page>
            <page name="name" string="TXT RET/PER">
               <group string="Archivo y datos">
                  <field name="export_agip_file_ret" widget="binary" filename="export_agip_filename_ret"/>
                  <field name="export_agip_data_ret" readonly="1"/>
                  <field name="export_agip_file_per" widget="binary" filename="export_agip_filename_per"/>
                  <field name="export_agip_data_per" readonly="1"/>
               </group>
            </page>
         </notebook>
		</sheet>
            </form>
         </field>
    </record>

    <record id="view_account_export_agip" model="ir.ui.view">
         <field name="name">account.export.agip.tree</field>
         <field name="model">account.export.agip</field>
         <field name="arch" type="xml">
            <tree>
		<field name="name" />
		<field name="date_from" />
		<field name="date_to" />
            </tree>
         </field>
    </record>



        <record id="action_account_export_agip" model="ir.actions.act_window">
            <field name="name">Exportaciones de AGIP</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.export.agip</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_account_export_agip"
                  action="action_account_export_agip"
                  parent="l10n_ar.account_reports_ar_statements_menu"
                  sequence="6"/>


       </data>
</odoo>
