<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<record model="ir.ui.view" id="import_padron_agip_view_form">
		<field name="name">import.padron.tucuman.view.form</field>
		<field name="model">import.padron.tucuman</field>
		<field name="arch" type="xml">
			<form string="Importar Padron Tucuman">
				<header>
					<button name="btn_process" type="object" string="Procesar" states="draft" />
					<field name="state" widget="statusbar" />
				</header>
				<sheet>
					<group>
						<field name="name" />
						<field name="padron_file" widget="binary"/>
						<field name="delimiter" />
						<field name="skip_first_line" />
						<field name="padron_match" />
						<field name="lineas_archivo" />
					</group>
					<notebook>
						<page string="Contenido" >
							<field name="file_content" readonly="1"/>
						</page>
						<page string="No procesados">
							<field name="not_processed_content" readonly="1"/>
						</page>
                        <page string="Padrones Cargados">
                                <field name="clientes_cargados" readonly="1"/>
                        </page>
					</notebook>
				</sheet>
			</form>
		</field>
	</record>

	<record model="ir.ui.view" id="import_padron_tucuman_list">
		<field name="name">import.padron.tucuman.view.list</field>
		<field name="model">import.padron.tucuman</field>
		<field name="arch" type="xml">
		<list string="Import Padron Tucuman">
			<field name="name" />
			<field name="padron_file" />
			<field name="state" />
		</list>
		</field>
	</record>

	<record model="ir.actions.act_window" id="action_import_padron_agip">
		<field name="name">Cargar Padron Tucuman</field>
		<field name="res_model">import.padron.agip</field>
		<field name="view_mode">list,form</field>
	</record>


	<menuitem name="Carga padron AGIP" id="import_padron_agip_form"
		parent="account.account_account_menu"
		action="action_import_padron_agip"
		sequence="1"/>

</odoo>
