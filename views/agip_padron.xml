<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_agip_padron_form" model="ir.ui.view">
        <field name="name">agip.padron.form</field>
        <field name="model">agip.padron</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="type_alicuot" />
                            <field name="name" />
                            <field name="publication_date" />
                            <field name="effective_date_from" />
                            <field name="effective_date_to" />
                            <field name="type_contr_insc" />
                            <field name="alta_baja" />
                        </group>
                        <group>
                            <field name="cambio" />
                            <field name="a_per" />
                            <field name="a_ret" />
                            <field name="nro_grupo_perc" />
                            <field name="nro_grupo_ret" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    

    <record id="view_agip_padron_tree" model="ir.ui.view">
        <field name="name">agip.padron.tree</field>
        <field name="model">agip.padron</field>
        <field name="arch" type="xml">
            <tree>
                <field name="type_alicuot" />
                <field name="name" />
                <field name="publication_date" />
                <field name="effective_date_from" />
                <field name="effective_date_to" />
                <field name="a_per" />
                <field name="a_ret" />
            </tree>
        </field>
    </record>

    <record id="action_agip_padron_tree" model="ir.actions.act_window">
        <field name="name">Padron AGIP</field>
        <field name="res_model">agip.padron</field>
        <field name="view_mode">tree,form</field>
        <field name="domain" eval="False"/>
        <field name="view_id" ref="l10n_ar_withholding_agip.view_agip_padron_tree"/>
    </record>

    <menuitem name="Padron IIBB AGIP" action="action_agip_padron_tree" id="menu_cordoba_padron_tree" parent="account.account_account_menu" sequence="1"/>
</odoo>